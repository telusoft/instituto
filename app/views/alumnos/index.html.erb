<h1>Mostrando todos los alumnos</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Apellido</th>
    <th>Email</th>
    <th>Id curso</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @alumnos.each do |alumno| %>
  <tr>
    <td><%= alumno.nombre %></td>
    <td><%= alumno.apellido %></td>
    <td><%= alumno.email %></td>
    <td><%= alumno.id_curso %></td>
    <td><%= link_to 'Mostrar', alumno %></td>
    <td><%= link_to 'Editar', edit_alumno_path(alumno) %></td>
    <td><%= link_to 'Borrar', alumno, confirm: 'Estas seguro?', method: :delete %></td>
  </tr>
<% end %>
</table>

